color status green default

set from		= "joseluis@rivco.net"
set sendmail 	= "/usr/bin/msmtp -a rivco"
set mbox		= "+RIVCO/INBOX"
unset record
set postponed 	= "+RIVCO/[Google].Drafts"

macro index E "<change-folder>+RIVCO/[Google].All Mail<enter><limit>~B"	"Search everything"
